# EditorConfig is awesome: https://EditorConfig.org
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Settings for C, C++ and Arduino files
[*.{ino,h,cpp,c}]
indent_style = space
indent_size = 2

# Settings for Markdown files (e.g., README.md)
[*.md]
trim_trailing_whitespace = false

# Settings for YAML files (e.g., library.properties or GitHub workflows)
[*.yaml]
indent_style = space
indent_size = 2

